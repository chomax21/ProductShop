@model ViewModelProduct
@{
    ViewData["Title"] = "Ищем продукт по Id";
}
<h5>@ViewData["Title"]</h5>

<form asp-action="GetProductById">
    <div class="m-2">
        <input asp-for="@Model.Id" type="number" />
        <button type="submit">Найти</button>
    </div>
</form>

@if (Model != null)
{
        <div class="card">
            <div class="card-header text-muted">
                <small>Информация о продукте</small>
            </div>
            <div class="card-body">
                <h5 class="card-title"><strong>Продукт :</strong> @Model?.Name</h5>
                <p class="card-text"><strong>Производитель :</strong> @Model?.Manufacturer</p>
                <p class="card-text"><strong>Категория :</strong> @Model?.Category</p>
                <p class="card-text"><strong>Описание :</strong> @Model?.Description</p>
                <p class="card-text"><strong>Состав :</strong> @Model?.ProductComposition</p>
                <p class="card-text"><strong>Цена :</strong> @Model?.Price</p>
                <a asp-action="UpdateProduct" asp-controller="Product" asp-route-id="@Model?.Id" class="btn btn-warning">Редактировать</a>
                <a asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@Model?.Id" class="btn btn-danger">Удалить</a>
            </div>
            <div class="card-footer text-muted">
                Количество : ???
            </div>
        </div>
}

