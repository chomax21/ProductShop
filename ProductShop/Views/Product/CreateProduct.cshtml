@model ProductViewModel
@{
    ViewData["Title"] = "Создаем продукт.";
}

<form asp-action="CreateProduct" asp-controller="Product">
    <div class="validation" asp-validation-summary="All"></div>
    <div class="form-group">
        <label>Категория продукта</label>
        <select asp-for="Category" asp-items="ViewBag.Category"></select>
    </div>
    <div class="form-group">
        <label>Название продукта</label>
        <input type="text" asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label>Описание продукта</label>
        <input type="text" asp-for="Description" class="form-control">
    </div>
    <div class="form-group">
        <label>Состав продукта</label>
        <input type="text" asp-for="ProductComposition" class="form-control">
    </div>
    <div class="form-group">
        <label>Производитель продукта</label>
        <input type="text" asp-for="Manufacturer" class="form-control">
    </div>
    <div class="form-group">
        <label>Цена</label>
        <input type="text" asp-for="stringPrice" class="form-control" >
        <span asp-validation-for="stringPrice"></span>
    </div>
    <div class="form-group">
        <label>Количество</label>
        <input type="number" asp-for="Count" class="form-control">
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
        <label class="form-check-label" asp-for="HaveDiscount">
            Наличие скидки
        </label>
    </div>
    <div class="form-group">
        <label>Размер скидки</label>
        <input type="text" asp-for="stringDiscount" class="form-control">
        <span asp-validation-for="stringDiscount"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Создать продукт</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
