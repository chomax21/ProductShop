@model ProductViewModel

@{
    ViewData["Title"] = "Редактируем продукт";
}

<form asp-action="UpdateProduct" asp-controller="Product">
    <div class="form-group">
        <label>Название продукта</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="@Model.Name">
    </div>
    <div class="form-group">
        <label>Описание продукта</label>
        <input type="text" asp-for="Description" class="form-control" placeholder="@Model.Description">
    </div>
    <div class="form-group">
        <label>Состав продукта</label>
        <input type="text" asp-for="ProductComposition" class="form-control" placeholder="@Model.ProductComposition">
    </div>
    <div class="form-group">
        <label>Производитель продукта</label>
        <input type="text" asp-for="Manufacturer" class="form-control" placeholder="@Model.Manufacturer">
    </div>
    <div class="form-group">
        <label>Цена</label>
        <input type="text" asp-for="stringPrice" class="form-control" placeholder="@Model.Price">
        <span asp-validation-for="stringPrice"></span>
    </div>
    <div class="form-group">
        <label>Количество</label>
        <input type="number" asp-for="Count" class="form-control" placeholder="@Model.Count">
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="@Model.HaveDiscount" id="flexCheckDefault">
        <label class="form-check-label" asp-for="HaveDiscount">
            Наличие скидки
        </label>
    </div>
    <div class="form-group">
        <label>Размер скидки</label>
        <input type="text" asp-for="stringDiscount" class="form-control" placeholder="@Model.Discount">
        <span asp-validation-for="stringDiscount"></span>
    </div>
    <div class="form-group">
        <label>Категория продукта</label>
        <input type="text" asp-for="Category" class="form-control" placeholder="@Model.Category">
    </div>
    <button type="submit" class="btn btn-primary">Отредактировать продукт</button>
</form>
